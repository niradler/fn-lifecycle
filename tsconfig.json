{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],
    "experimentalDecorators": true,
    "module": "commonjs",
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "removeComments": true,
    "declaration": true,
    "declarationDir": "./types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "exclude": [
    "tests",
    "node_modules",
    "build",
    "coverage",
    "*.config.js",
    "types"
  ]
}
